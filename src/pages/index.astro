---
import "../styles/style.scss";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Common/Header.astro";
import Footer from "../components/Common/Footer.astro";
---

<Layout title="Consumer & Home Electronics from LG | LG UK">
  <Header widthLogo="100" altLogo="LG logo (Life's Good)" />
  <main class="main-section">
    <section>
      <div class="container">
        <h1
          class="text-center capitalize fs-300 fs-small margin-block-start-20"
        >
          Welcome to Astro Page
        </h1>
        <section id="hero-area"></section>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .main-section {
    min-height: 100svh;
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
  }
</style>
